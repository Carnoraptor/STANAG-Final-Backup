<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">

  <repeat>
    <times>10</times>
      <action>
        <fire>
          <direction type="absolute">360 * $rand</direction>
          <bulletRef label="add2way"/>
        </fire>
            <repeat>
              <times>30</times>
                <action>
                  <fire>
                   <direction type="sequence">10</direction>
                  <bulletRef label="add2way"/>
                  </fire>
                 </action>
              </repeat>

            <wait>30</wait>

      </action>
  </repeat>

  <repeat>
    <times>20</times>
      <action>
        <fire>
          <direction type="aim">(45 * $rand) + (-45 * $rand)</direction>
          <bulletRef label="catcher"/>
        </fire>
        <wait>3</wait>
      </action>
  </repeat>

</action>


<bullet label="add2way">
<speed>0.2</speed>
<action>

  <wait>(24 + 6 * $rand)/ (2.4 * (0.25 + 0.75 * $rank))</wait>

  <fire>
    <direction type="relative">17</direction>
    <speed type="relative">0</speed>
    <bullet/>
  </fire>
  <fire>
    <direction type="relative">-17</direction>
    <speed type="relative">0</speed>
    <bullet/>
  </fire>

</action>
</bullet>

<bullet label="catcher">
<speed>0.4</speed>
</bullet>

</bulletml>