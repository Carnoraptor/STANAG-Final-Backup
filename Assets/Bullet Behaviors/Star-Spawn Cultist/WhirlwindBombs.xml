<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire>
  <direction type="absolute">60</direction>
  <speed>3.3</speed>
  <bulletRef label="roll">
   <param>1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">120</direction>
  <speed>3.3</speed>
  <bulletRef label="roll">
   <param>-1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">180</direction>
  <speed>3.2</speed>
  <bulletRef label="roll">
   <param>1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">240</direction>
  <speed>3.2</speed>
  <bulletRef label="roll">
   <param>-1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">300</direction>
  <speed>2</speed>
  <bulletRef label="roll">
   <param>1</param>
  </bulletRef>
 </fire>
 <fire>
  <direction type="absolute">360</direction>
  <speed>2</speed>
  <bulletRef label="roll">
   <param>-1</param>
  </bulletRef>
 </fire>

 <wait>400</wait>
</action>

<bullet label="roll">

<action>
 <wait>12</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>1</term>
 </changeSpeed>

 <fire>
  <direction type="absolute">180+90*$1</direction>
  <bullet> <action> <vanish/> </action> </bullet>
 </fire>

 <repeat> <times>100</times> <action>
  <fire>
   <direction type="sequence">9</direction>
   <speed>0.8</speed>
   <bullet/>
  </fire>
  <wait>2</wait>
 </action> </repeat>

 <vanish/>

</action> </bullet>

</bulletml>